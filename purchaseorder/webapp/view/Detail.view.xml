<mvc:View
	controllerName="purchaseorder.controller.Detail"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	height="100%">
	<Page
	id="detailPage"
	title="BESTELLDETAILS" showHeader="true" showFooter="true" showNavButton="false">
        <content>
            <ObjectHeader intro="{ID}" title="{ShortText}" number="{path: 'Subtotal3', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}" numberUnit="{Currency}" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true">
                <attributes>
                    <ObjectAttribute title="" text="{path: 'Datum', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'short' }}" active="false" visible="true"/>
                </attributes>
                <statuses/>
                <markers/>
            </ObjectHeader>
            <IconTabBar expandable="false" expanded="true" applyContentPadding="false" backgroundDesign="Solid" upperCase="false" visible="true" selectedKey="Ok">
                <items>
                    <IconTabFilter icon="sap-icon://hint" iconColor="Default" text="{Status}" count="" design="Vertical" showAll="false" textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
                        <content/>
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://notes" iconColor="Default" text="Notes" count="" design="Vertical" showAll="false" textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
                        <content>
                            <List width="100%" growing="false" growingThreshold="20" growingScrollToLoad="false" backgroundDesign="Solid" items="{path:'Kommentar', templateShareable:true}">
                                <items>
                                    <FeedListItem icon="sap-icon://notes" sender="" text="{Kommentar}" info="{Autor}" timestamp="{path: 'timestamp', type: 'sap.ui.model.type.DateTime', formatOptions: { UTC: true, style: 'short' }}"/>
                                </items>
                            </List>
                        </content>
                    </IconTabFilter>
                </items>
                <content>
                    <Text text="" width="auto" maxLines="1" wrapping="false" textAlign="Center" textDirection="Inherit" visible="true"/>
                </content>
            </IconTabBar>
            <Table
				id="lineItemsList"
				width="auto"
				items="{Items}"
				updateFinished=".onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}">
				<headerToolbar>
					<Toolbar>
						<Title
							id="lineItemsTitle"
							text="{detailView>/lineItemListTitle}"
							titleStyle="H3"
							level="H3"/>
					</Toolbar>

				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>detailLineItemTableIDColumn}"/>
					</Column>

					<!--ALEX Column Quantity & Sum Total-->
					<Column
						width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<Text text="{i18n>detailLineItemQuantityColumn}"/>
					</Column>

					<Column
						width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<Text text="{i18n>detailLineItemTableUnitNumberColumn}"/>
					</Column>

					<Column
						width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<Text text="{i18n>detailLineItemTotalSumColumn}"/>
					</Column>
					
				</columns>
				<items>
					<ColumnListItem type="Active">
						<cells>
							<ObjectIdentifier
								title="{ShortText}"
								text="{PoItem}"
								titleActive="false" 
								visible="true"/>

								<!--ALEX Quantity & Sum Total-->
							<ObjectNumber
								number="{
									path: 'Quantity',
									formatter: '.formatter.currencyValue'
								}"
								unit="{Unit}"/>	

							<ObjectNumber
								number="{
									path: 'NetPrice',
									formatter: '.formatter.currencyValue'
								}"
								unit="{Currency}"/>

							<ObjectNumber
								number="{
									path: 'Subtotal3',
									formatter: '.formatter.currencyValue'
								}"
								unit="{Currency}"/>

						</cells>
					</ColumnListItem>
				</items>
			</Table>
        </content>
        <footer>
            <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer width=""/>
                    <Button text="Freigeben" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
                    <Button text="Ablehnen" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
                </content>
            </OverflowToolbar>
        </footer>
        <headerContent/>
    </Page>
</mvc:View>